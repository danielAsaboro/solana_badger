{
  "name": "solana-security-reference",
  "version": "1.0.0",
  "description": "Comprehensive security reference repository featuring vulnerable-vs-secure Solana program examples",
  "main": "index.js",
  "scripts": {
    "test": "ts-mocha -p ./tsconfig.json -t 1000000 tests/**/*.test.ts",
    "test:signer-checks": "ts-mocha -p ./tsconfig.json -t 1000000 tests/signer-checks.test.ts",
    "test:owner-checks": "ts-mocha -p ./tsconfig.json -t 1000000 tests/owner-checks.test.ts",
    "test:arbitrary-cpi": "ts-mocha -p ./tsconfig.json -t 1000000 tests/arbitrary-cpi.test.ts",
    "test:reinitialization": "ts-mocha -p ./tsconfig.json -t 1000000 tests/reinitialization-attacks.test.ts",
    "test:type-cosplay": "ts-mocha -p ./tsconfig.json -t 1000000 tests/type-cosplay.test.ts",
    "test:pda-sharing": "ts-mocha -p ./tsconfig.json -t 1000000 tests/pda-sharing.test.ts",
    "test:bump-seed": "ts-mocha -p ./tsconfig.json -t 1000000 tests/bump-seed-canonicalization.test.ts",
    "test:integer-overflow": "ts-mocha -p ./tsconfig.json -t 1000000 tests/integer-overflow.test.ts",
    "test:panic-handling": "ts-mocha -p ./tsconfig.json -t 1000000 tests/panic-handling.test.ts",
    "test:closing-accounts": "ts-mocha -p ./tsconfig.json -t 1000000 tests/closing-accounts.test.ts",
    "test:unsafe-rust": "ts-mocha -p ./tsconfig.json -t 1000000 tests/unsafe-rust.test.ts",
    "test:pinocchio": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/*.test.ts",
    "test:pinocchio:signer": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/signer-checks.pinocchio.test.ts",
    "test:pinocchio:owner": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/owner-checks.pinocchio.test.ts",
    "test:pinocchio:cpi": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/arbitrary-cpi.pinocchio.test.ts",
    "test:pinocchio:reinit": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/reinitialization.pinocchio.test.ts",
    "test:pinocchio:cosplay": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/type-cosplay.pinocchio.test.ts",
    "test:pinocchio:pda": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/pda-sharing.pinocchio.test.ts",
    "test:pinocchio:bump": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/bump-seed-canonicalization.pinocchio.test.ts",
    "test:pinocchio:overflow": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/integer-overflow.pinocchio.test.ts",
    "test:pinocchio:panic": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/panic-handling.pinocchio.test.ts",
    "test:pinocchio:closing": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/closing-accounts.pinocchio.test.ts",
    "test:pinocchio:unsafe": "BPF_OUT_DIR=./target/deploy ts-mocha -p ./tsconfig.json -t 120000 tests/pinocchio/unsafe-rust.pinocchio.test.ts",
    "setup:pinocchio": "./scripts/setup-pinocchio-tests.sh",
    "build": "./scripts/build-all.sh",
    "clean": "./scripts/clean.sh",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "solana",
    "security",
    "anchor",
    "pinocchio",
    "blockchain",
    "smart-contracts",
    "vulnerabilities",
    "education"
  ],
  "author": "SuperteamNG",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/superteamng/solana-security-reference"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.2",
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "mocha": "^10.5.2",
    "prettier": "^3.3.2",
    "solana-bankrun": "^0.4.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "bn.js": "^5.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
